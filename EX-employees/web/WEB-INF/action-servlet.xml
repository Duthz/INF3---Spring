<beans> 
    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" singleton="true">
        <property name="driverClassName" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="url" value="jdbc:derby://localhost:1527/sample" />
        <property name="username" value="app" />
        <property name="password" value="app" />
        <property name="maxActive" value="10" />
    </bean>
    <bean id="dao" class="com.myapp.model.struts.EmployeModel" singleton="true">
        <property name="datasource"> <ref bean="dataSource"/></property>
    </bean>
    <bean id="abstractAction" abstract="true">
        <property name="iModel"> <ref bean="dao"/></property>
    </bean>
    <bean name="/Lookup" parent="abstractAction" class="com.myapp.struts.action.EmployeeAction"/>
    
    
</beans>
